# Application
APP_NAME=OpenBioBench
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=change_me_in_production_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/openbiobench
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# MinIO / S3 Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=openbiobench
MINIO_SECURE=False

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# File Upload
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Scientific Tools (Docker container  names)
AUTODOCK_VINA_IMAGE=openbiobench/autodock-vina:1.2.3
RDKIT_IMAGE=openbiobench/rdkit:2023.09
MGLTOOLS_IMAGE=openbiobench/mgltools:1.5.7
GROMACS_IMAGE=openbiobench/gromacs:2023.1
MAFFT_IMAGE=biocontainers/mafft:v7.520
IQTREE_IMAGE=biocontainers/iqtree:v2.2.0

# Compute Resources
JOB_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_JOBS=10

# External APIs
UNIPROT_API_URL=https://rest.uniprot.org
PDB_API_URL=https://data.rcsb.org/rest/v1
ALPHAFOLD_API_URL=https://alphafold.ebi.ac.uk/api
PUBCHEM_API_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug
CHEMBL_API_URL=https://www.ebi.ac.uk/chembl/api/data
